<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
        <h1><%= title %></h1>

        <form class="form" method="POST">
            <div class="form-group">
                <label for="nameTextField">Name of Contact</label>
                <input type="text" class="form-control"
                id="nameTextField"
                placeholder="Enter the Name of the Contact"
                name="name" 
                value="<%= contact.name %>"
                required>
            </div>

            <div class="form-group">
                <label for="numberTextField">Number</label>
                <input type="text" class="form-control"
                id="numberTextField"
                placeholder="Enter the Number of the Contact"
                name="number" 
                value="<%= contact.number %>"
                required>
            </div>

            <div class="form-group">
                <label for="emailTextField">E-mail</label>
                <input type="text" class="form-control"
                id="emailTextField"
                placeholder="Enter the E-mail of the Contact"
                name="email" 
                value="<%= contact.email %>"
                required>
            </div>

            <button class="btn btn-primary" type="submit">
                <i class="fas fa-edit"></i> Submit</button>

            <a href="/contact-list" class="btn btn-warning">
                <i class="fas fa-undo"></i> Cancel</a>

        </form>
    </div>
    </div>
</div>


<%- include ../partials/bottom_nav.ejs %>
<%- include ../partials/footer.ejs %> 